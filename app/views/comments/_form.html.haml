= form_for(@comment) do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@comment.errors.count, "error")
        prohibited this comment from being saved:
      %ul
        - @comment.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :text
    %br
      = f.text_area :text
  .field
    = f.label :date
    %br
      = f.date_select :date
  .actions
    = f.submit
