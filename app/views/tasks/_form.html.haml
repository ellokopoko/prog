= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :description
    %br
      = f.text_field :description
  .field
    = f.label :date
    %br
      = f.date_select :date
  .field
    = f.label :deadline_date
    %br
      = f.date_select :deadline_date
  .field
    = f.label :status
    %br
      = f.check_box :status
  .actions
    = f.submit
